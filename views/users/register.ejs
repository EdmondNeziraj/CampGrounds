<% layout('layouts/boilerplate')%>
<link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
    

    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="username-input mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                                <div class="valid-feedback">All good!</div>
                            </div>
                            <div class="email-input mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="text" id="email" name="email" required>
                                <div class="valid-feedback">All good!</div>
                            </div>
                            <div class="password-input">
                                <label class="form-label" for="Password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">All good!</div>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-success">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>